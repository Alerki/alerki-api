{
  "name": "alerki",
  "version": "0.4.3",
  "description": "Alerki website workspaces / eslint / husky / commitlint wrapper",
  "repository": "https://github.com/alerki/Alerki.git",
  "author": "Oleksandr Petryk <sachapos50@gmail.com> (https://petryk.me)",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "api"
  ],
  "scripts": {
    "lint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "lint:fix": "eslint --ext .ts,.tsx,.js,.jsx --fix .",
    "start:docker": "docker-compose -f ./docker/docker-compose.dev.yml up -d",
    "stop:docker": "docker-compose -f ./docker/docker-compose.dev.yml stop",
    "prepare": "husky install && ts-node ./docker/dev-env.ts"
  },
  "devDependencies": {
    "@commitlint/config-angular": "^17.3.0",
    "@nestjs/cli": "^9.1.5",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.46.0",
    "commitlint": "^17.3.0",
    "eslint": "8.28.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint . --ext .ts,.tsx,.js,.jsx"
  }
}
