{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "export $(cat ../docker/.prod.env | xargs) && nest start",
    "start:dev": "export $(cat ../docker/.dev.env | xargs) &&  nest start --watch",
    "start:debug": "export $(cat ../docker/.test.env | xargs) && nest start --debug --watch",
    "start:prod": "export $(cat ../docker/.prod.env | xargs) && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "export $(cat ../docker/.test.env | xargs) && yarn migrate:test && jest --forceExit --collect-coverage --detectOpenHandles",
    "test:watch": "export $(cat ../docker/.test.env | xargs) && yarn migrate:test &&  jest --watch",
    "test:cov": "export $(cat ../docker/.test.env | xargs) && yarn migrate:test &&  jest --coverage",
    "test:debug": "export $(cat ../docker/.test.env | xargs) && yarn migrate:test &&  node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "migrate:dev": "export $(cat ../docker/.dev.env | xargs) && yarn prisma migrate dev --name",
    "migrate:test": "export $(cat ../docker/.test.env | xargs) && yarn prisma migrate reset --force",
    "migrate:prod": "export $(cat ../docker/.prod.env | xargs) && yarn prisma migrate --name",
    "makemigrations": "export $(cat ../docker/.test.env | xargs) && yarn prisma migrate dev --create-only"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@prisma/client": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/testing": "^8.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "prisma": "^3.13.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "swagger-ui-express": "^4.3.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
