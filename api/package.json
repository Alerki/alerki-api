{
  "name": "api",
  "version": "0.4.3",
  "description": "Alerki API",
  "author": "Oleksandr Petryk <sachapos50@gmail.com> (https://petryk.me)",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "dotenv -e ../docker/.env.prod -- nest start",
    "start:dev": "dotenv -e ../docker/.env.dev -- nest start --watch",
    "start:dev:seed": "dotenv -e ../docker/.env.dev -- ts-node ./prisma/seed.ts",
    "start:debug": "dotenv -e ../docker/.env.dev -- nest start --debug --watch",
    "start:debug:seed": "dotenv -e ../docker/.env.dev -- ts-node ./prisma/seed.ts",
    "start:prod": "dotenv -e ../docker/.env.prod -- node dist/src/main",
    "start:prod:seed": "dotenv -e ../docker/.env.prod -- ts-node ./prisma/seed.ts",
    "test": "dotenv -e ../docker/.env.test -- jest --config ./jest.config.ts",
    "test:e2e": "yarn migrate:test && dotenv -e ../docker/.env.test -- jest --config ./jest.e2e.config.ts --coverage --runInBand --detectOpenHandles",
    "format:prisma": "prisma format",
    "studio:dev": "dotenv -e ../docker/.env.dev -- prisma studio",
    "studio:test": "dotenv -e ../docker/.env.test -- prisma studio",
    "make:migrations": "dotenv -e ../docker/.env.dev -- prisma migrate dev --create-only",
    "migrate:dev": "dotenv -e ../docker/.env.dev -- prisma migrate dev",
    "migrate:test": "dotenv -e ../docker/.env.test -- prisma migrate reset --force",
    "migrate:prod": "dotenv -e ../docker/.env.prod -- prisma migrate"
  },
  "dependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/swagger": "^6.1.4",
    "@prisma/client": "^4.7.1",
    "@types/cookie-parser": "^1.4.3",
    "axios": "^1.2.1",
    "bcryptjs": "^2.4.3",
    "buffer-image-size": "^0.6.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "device-detector-js": "^3.0.3",
    "dotenv-cli": "^6.0.0",
    "image-type": "4.1.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^4.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.0",
    "sharp": "^0.31.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.2.1",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/image-type": "^4.0.1",
    "@types/jest": "29.2.4",
    "@types/jsonwebtoken": "9.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.18",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/sharp": "^0.31.0",
    "@types/supertest": "^2.0.11",
    "cors": "^2.8.5",
    "jest": "29.3.1",
    "jsonwebtoken": "^9.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "prisma": "^4.7.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "~4.9.4"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "ts-node ./prisma/seed.ts"
  }
}
