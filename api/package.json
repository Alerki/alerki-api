{
  "name": "api",
  "version": "1.0.0",
  "description": "Alerki API",
  "author": "Petryk Oleksandr <sachapos50@gmail.com> (https://petryk.me/)",
  "license": "MIT",
  "scripts": {
    "dev": "export $(cat ../docker/.env.dev | xargs) && ts-node-dev --respawn --transpile-only ./src/index.ts",
    "start": "export $(cat ../docker/.env.prod | xargs) && node ./dist/index.js",
    "test": "export $(cat ../docker/.env.test | xargs) && jest --collect-coverage --verbose --detectOpenHandles --forceExit",
    "test:unit": "export $(cat ../docker/.env.test | xargs) && jest --collect-coverage --verbose ./src/__tests__/unit --detectOpenHandles --forceExit",
    "test:integration": "export $(cat ../docker/.env.test | xargs) && jest --collect-coverage --verbose ./src/__tests__/integration --detectOpenHandles --forceExit",
    "build": "tsc --project './tsconfig.json'",
    "dev:migrate": "export $(cat ../docker/.env.dev | xargs) && yarn prisma migrate dev --name",
    "test:migrate": "export $(cat ../docker/.env.test | xargs) && yarn prisma migrate dev --name",
    "prod:migrate": "export $(cat ../docker/.env.prod | xargs) && yarn prisma migrate dev --name"
  },
  "dependencies": {
    "@prisma/client": "^3.12.0",
    "axios": "^0.26.1",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-fileupload": "^1.3.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "randexp": "^0.5.3",
    "sequelize": "^6.17.0",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@types/sequelize": "^4.28.11",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prisma": "^3.12.0",
    "sequelize-cli": "^6.4.1",
    "sequelize-mig": "^3.1.3",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8"
  }
}
