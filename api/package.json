{
  "name": "api",
  "version": "0.4.0",
  "description": "Alerki API",
  "author": "Oleksandr Petryk <sachapos50@gmail.com> (https://petryk.me)",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "dotenv -e ../docker/.env.prod -- nest start",
    "start:dev": "dotenv -e ../docker/.env.dev -- nest start --watch",
    "start:debug": "dotenv -e ../docker/.env.dev -- nest start --debug --watch",
    "start:prod": "dotenv -e ../docker/.env.prod -- node dist/main",
    "test": "dotenv -e ../docker/.env.test -- jest --config ./jest.config.ts",
    "test:e2e": "dotenv -e ../docker/.env.test -- jest --config ./jest.e2e.config.ts --coverage",
    "format:prisma": "prisma format",
    "studio:dev": "dotenv -e ../docker/.env.dev -- prisma studio",
    "studio:test": "dotenv -e ../docker/.env.test -- prisma studio",
    "make:migrations": "dotenv -e ../docker/.env.dev -- prisma migrate dev --create-only",
    "migrate:dev": "dotenv -e ../docker/.env.dev -- prisma migrate dev",
    "migrate:test": "dotenv -e ../docker/.env.test -- prisma migrate reset --force",
    "migrate:prod": "dotenv -e ../docker/.env.prod -- prisma migrate"
  },
  "dependencies": {
    "@nestjs/common": "^9.1.1",
    "@nestjs/core": "^9.1.1",
    "@nestjs/platform-express": "^9.1.1",
    "@prisma/client": "^4.3.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^6.0.0",
    "prisma": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.3",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.2",
    "@types/express": "^4.17.14",
    "@types/jest": "29.0.3",
    "@types/node": "^18.7.18",
    "@types/supertest": "^2.0.11",
    "jest": "29.0.3",
    "prettier": "^2.3.2",
    "prisma": "^4.3.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.1",
    "ts-loader": "^9.4.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "~4.8.3"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  }
}
